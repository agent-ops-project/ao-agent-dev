{
  "name": "user-interface-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for VS Code extension and web app",
  "workspaces": [
    "vscode-extension",
    "webapp",
    "webapp/client"
  ],
  "scripts": {
    "install:all": "npm install",
    "build:all": "npm run build --workspaces --if-present",
    "build:extension": "npm run compile --workspace=vscode-extension",
    "build:webapp-client": "npm run build --workspace=client",
    "dev:webapp-client": "npm run dev --workspace=client",
    "clean": "rm -rf node_modules vscode-extension/node_modules webapp/node_modules webapp/client/node_modules"
  }
}
