{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "develop <script.py> [<args>]",
      "type": "debugpy",
      "request": "launch",
      "module": "agent_copilot.develop",
      "args": ["${workspaceFolder}/example_workflows/debug_examples/tracing/add_numbers.py"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "aco config",
      "type": "debugpy",
      "request": "launch",
      "module": "agent_copilot.commands.aco_cli",
      "args": ["config", "--config-file", "./test.yaml"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "aco launch -m <script.py> [<arg>]",
      "type": "debugpy",
      "request": "launch",
      "module": "agent_copilot.commands.launch",
      "args": ["-m", "example_workflows/debug_examples/tracing/add_numbers", "--arg1", "a1"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/src/user_interface"
      ],
      "outFiles": [
        "${workspaceFolder}/src/user_interface/dist/**/*.js"
      ],
      "preLaunchTask": "npm: watch",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}